@{
    ViewBag.Title = "Sales Order";
}
<style>
    body {
        background-color: #2b6fa6; 
        color: white; 
    }

    .card {
        background-color: #f8f9fa; 
        border-radius: 10px;
    }

    .form-control, .btn {
        border-radius: 5px; 
    }

    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #e9ecef;
    }

    .table-striped > tbody > tr:nth-of-type(even) {
        background-color: white;
    }

    .btn-primary {
        background-color: #0056b3;
        border-color: #004b9a;
    }

    .btn-danger {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #218838;
    }

    h2 {
        background-color: #004b9a;
        padding: 10px;
        border-radius: 10px;
    }
</style>

<div class="container mt-4">
    <h2 class="text-center text-white">SALES ORDER</h2>
    <div class="card p-4">
        <!-- Form Search -->
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="keywords" class="form-label">Keywords</label>
                <input type="text" class="form-control" id="keywords" placeholder="Input here">
            </div>
            <div class="col-md-4">
                <label for="orderDate" class="form-label">Order Date</label>
                <input type="date" class="form-control" id="orderDate">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary w-100">Search</button>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between mb-3">
            <button class="btn btn-danger" onclick="window.location.href='@Url.Action("AddSalesOrder", "Home")'">Add New Data</button>

            <button class="btn btn-success">Export to Excel</button>
        </div>

        <!-- Table -->
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>No</th>
                    <th>Action</th>
                    <th>Sales Order</th>
                    <th>Order Date</th>
                    <th>Customer</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                    <td>50_001</td>
                    <td>24/2/2011</td>
                    <td>PROFES</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                    <td>50_002</td>
                    <td>24/2/2011</td>
                    <td>TITAN</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                    <td>50_003</td>
                    <td>25/2/2011</td>
                    <td>PROFES</td>
                </tr>
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="d-flex justify-content-between">
            <p class="text-dark">1 - 10 of 28 items</p>
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
